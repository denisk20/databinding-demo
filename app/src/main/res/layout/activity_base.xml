<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".BaseActivity"
    >
    <data>
        <variable name="zoo" type="com.denisk.demo.model.ZooModel" />
        <import type="com.denisk.demo.util.ZooUtil"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            style="@style/Label"
            android:text='@{zoo.name}'
            tools:text="Some name"
            />
        <TextView
            style="@style/Label"
            android:text='@{(zoo.monkeyCount > 0 ? Integer.toString(zoo.monkeyCount) : "no") + " monkeys"}'
            tools:text="some text"
            />
        <TextView
            style="@style/Label"
            android:text='@{(zoo.elephantCount > 0 ? Integer.toString(zoo.elephantCount) : "no") + " elephants"}'
            tools:text="another text"
            />
        <TextView
            style="@style/Label"
            android:text='@{"Total animals in zoo: " + ZooUtil.getTotalAnimals(zoo)}'
            tools:text="another text"
            />
        <TextView
            style="@style/Label"
            android:text='@{"Director of the zoo: " + zoo.director.name}'
            tools:text="another text"
            />
        <TextView
            style="@style/Label"
            android:text='@{@string/zoo_properties + " - end of I18N text"}'
            tools:text="Some name"
            />

        <Button
            style="@style/Label"
            android:text="@string/checkMonkeys"
            android:onClick="@{zoo.monkeyCount > 0 ? ZooUtil.onMonkeys : ZooUtil.onNoMonkeys}"/>
    </LinearLayout>
</layout>